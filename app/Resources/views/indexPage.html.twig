<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Портал "Солнечные продукты"{% endblock %}</title>
    {% block stylesheets %}<link href="{{ asset('/static/css/style.css') }}" type="text/css" rel="stylesheet" />{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<div id="topMenu">
{% block topMenu %}
    <ul class="topnav" id="menu">
        <li>
            {% if app.request.get('_route') == 'mainpage' %}
                <a class="active" href="{{ app.request.baseUrl }}">Главная</a>
            {% else %}
                <a href="{{ app.request.baseUrl }}">Главная</a>
            {% endif %}
        </li>
        <li>
            {% if app.request.get('_route') == 'auction' %}
                <a class="active" href="{{ url("auction") }}">Торги</a>
            {% else %}
                <a href="{{ url("auction") }}">Торги</a>
            {% endif %}
        </li>
        <li>
            {% if app.request.get('_route') == 'routes' %}
                <a class="active" href="{{ url("routes") }}">Рейсы</a>
            {% else %}
                <a href="{{ url("routes") }}">Рейсы</a>
            {% endif %}
        </li>
        <li>
            {% if app.request.get('_route') == 'drivers' %}
                <a class="active" href="{{ url("drivers") }}">Водители</a>
            {% else %}
                <a href="{{ url("drivers") }}">Водители</a>
            {% endif %}
        </li>
        <li>
            {% if app.request.get('_route') == 'vehicles' %}
                <a class="active" href="{{ url("vehicles") }}">Транспорт</a>
            {% else %}
                <a href="{{ url("vehicles") }}">Транспорт</a>
            {% endif %}
        </li>

        {% block topMenuSearch %}
        {% endblock %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="loggedUser">
                Здравствуйте, {{ app.user.username }} <a href="{{ logout_path('main') }}">Выход</a>
            </li>
        {% endif %}

        <li class="icon">
            <a href="javascript:void(0);" style="font-size:15px;" onclick="showMenuItems()">☰</a>
        </li>
    </ul>
{% endblock %}
</div>

{% block body %}
<div id="content">
    <div class="lotsInfo">
        <div class="lotsInfoTitle">Общая информация по лотам</div>
        <div class="lotsList">
            <ul>
                <li>
                    <div>Активных лотов</div>
                    <div class="pdleft3">518</div>
                </li>
                <li class="pdleft20">
                    <div>Москва - Тюмень</div>
                    <div>328</div>
                </li>
                <li class="pdleft20">
                    <div>Новосибирск - Омск</div>
                    <div>190</div>
                </li>
                <li>
                    <div>Планируемых лотов</div>
                    <div class="pdleft3">150</div>
                </li>
                <li class="pdleft20">
                    <div>Саратов - Рязань</div>
                    <div>87</div>
                </li>
                <li class="pdleft20">
                    <div>Ижевск - Красноярск</div>
                    <div>63</div>
                </li>
            </ul>
        </div>
    </div>

    <div class="userRoutesInfo">
        <div class="lotsInfoTitle">Информация по вашим рейсам</div>
        <div class="lotsList">
            <ul>
                <li>
                    <div>Рейсы требующие назначения</div>
                    <div>18</div>
                </li>
                <li>
                    <div>Опоздания</div>
                    <div>6</div>
                </li>
                <li>
                    <div>Всего рейсов</div>
                    <div>24</div>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/static/js/jquery-3.1.1.min.js') }}"></script>
    <script src="{{ asset('/static/js/main.js') }}"></script>
{% endblock %}
</body>
</html>