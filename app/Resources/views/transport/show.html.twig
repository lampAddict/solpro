{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transport</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transport.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ transport.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ transport.type }}</td>
            </tr>
            <tr>
                <th>Payload</th>
                <td>{{ transport.payload }}</td>
            </tr>
            <tr>
                <th>Regnum</th>
                <td>{{ transport.regNum }}</td>
            </tr>
            <tr>
                <th>Trailerregnum</th>
                <td>{{ transport.trailerRegNum }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transport') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('transport_edit', { 'id': transport.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
