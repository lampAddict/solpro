{% extends 'base.html.twig' %}

{% block topMenuSearch %}
    {{ include('search/search.html.twig', { 'searchCaption': 'Поиск по рейсам..' }) }}
{% endblock %}

{% block body %}
    <div id="routesPageContainer">
        <div id="routesFilter">
            <div class="half">
                <div><a id="filter">Показать фильтры</a></div>
                <div id="filterBlock" class="half dnone">
                    <table cellpadding="0" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Статус рейса</th>
                            <th>Направление</th>
                            <th>Дата подачи</th>
                            <th>Водитель с машиной</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="routeFilterStatus">
                                    <select id="routeFilterStatus">
                                        <option selected="selected">&mdash;</option>
                                        <option>Подтвержден</option>
                                        <option>Отгружен</option>
                                    </select>
                                </td>
                                <td class="routeFilterDirection">
                                    <div>
                                        <span>Откуда</span>
                                        <select id="routeFilterDirFrom">
                                            <option selected="selected">&mdash;</option>
                                            <option>Саратов</option>
                                            <option>Аткарск</option>
                                        </select>
                                    </div>
                                    <div>
                                        <span>Куда</span>
                                        <select id="routeFilterDirTo">
                                            <option selected="selected">&mdash;</option>
                                            <option>Казань</option>
                                            <option>Тула</option>
                                        </select>
                                    </div>
                                </td>
                                <td class="routeFilterGetInTime">
                                    <div>
                                        <span>С</span>
                                        <input type="datetime-local" id="routeFilterTimeFrom">
                                    </div>
                                    <div>
                                        <span>По</span>
                                        <input type="datetime-local" id="routeFilterTimeTo">
                                    </div>
                                </td>
                                <td class="routeFilterDriver">
                                    <div>
                                        <span>Назначен</span>
                                        <input type="checkbox" id="routeFilterDriverSet">
                                    </div>
                                    <div>
                                        <span>Неназначен</span>
                                        <input type="checkbox" id="routeFilterDriverNotSet">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{ dump(routes) }}
        <div id="routesTable">
            <table cellpadding="0" cellspacing="0">
                <thead>
                <tr>
                    <th>Статус рейса</th>
                    <th>№ Рейса</th>
                    <th>Направление</th>
                    <th>Подача</th>
                    <th>Вид ТС</th>
                    <th>Вес (Объем)</th>
                    <th>Ставка</th>
                    <th>Водитель</th>
                    <th>Марка, гос. номер ТС</th>
                </tr>
                </thead>
                <tbody>
                    {% for route in routes %}
                        <tr>
                            <td class="lotStatus">{{ route.getStatus }}</td>
                            <td align="center"><a class="showLotRouteInfo">{{ route.getCode }}</a></td>
                            <td class="lotDirection">{{ route.getRegionFrom }} &xrarr;<br />{{ route.getRegionTo }}</td>
                            <td class="lotGetInTime">{{ route.getLoadDate|date('d.m.Y H:i') }}</td>
                            <td class="lotVehicleType">{{ route.getVehicleType }}<br />{{ route.getVehiclePayload }}</td>
                            <td align="right">{{ route.getCargoWeight }} ({{ route.getCargoCount }})</td>
                            <td align="right">{{ route.getLotId.getPrice }}</td>
                            <td align="center"></td>
                            <td align="right"></td>
                        </tr>
                        <tr class="dnone">
                            <td colspan="9">
                                <div class="lotInfoWindow">
                                    <div class="routeNumber">
                                        Рейс №: <span id="routeNumber">{{ route.getCode }}</span>
                                    </div>
                                    <div class="routeStatus">
                                        Статус: <span id="routeStatus">{{ route.getStatus }}</span>
                                    </div>
                                    <div class="routeInfoTable">
                                        <table cellspacing="0" cellpadding="0">
                                            <tbody>
                                            <tr>
                                                <td>Дата загрузки:</td><td>{{ route.getLoadDate|date('d.m.Y H:i') }}</td>
                                            </tr>
                                            <tr>
                                                <td>Пункт отгрузки:</td><td>{{ route.getRegionFrom }}</td>
                                            </tr>
                                            <tr>
                                                <td>Регион доставки:</td><td>{{ route.getRegionTo }}</td>
                                            </tr>
                                            <tr>
                                                <td>Вид ТС:</td><td>{{ route.getVehiclePayload }} {{ route.getVehicleType }}</td>
                                            </tr>
                                            <tr>
                                                <td>Тариф:</td><td>{{ route.getLotId.getPrice }} &#8381;</td>
                                            </tr>
                                            <tr>
                                                <td>Комментарий:</td><td>{{ route.getComment }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="routeAssignDriver">
                                        <div class="routeDriverHeader">Водитель:</div>
                                        <div class="routeDriverName">Петров Петр Петрович</div>
                                        <div class="routeDriverPassportData">Паспорт: 7762 113241, выдан ОУФМС России по Пресненскому району г.Москвы в ЦАО. дата выдачи 16.12.2005</div>
                                        <div class="routeDriverVehicle">КАМАЗ е093мм/199 п/п: ак7854/99</div>
                                        <div id="routeAssignDriver" class="btn btn-default">Назначить водителя</div>
                                        <div id="routeDeleteDriver" class="btn btn-danger">Удалить водителя из рейса</div>
                                    </div>

                                    <div class="routeInfo">
                                        <span>Информация по заказам:</span>
                                        <table id="routeOrdersTable" cellpadding="0" cellspacing="0" style="border:1px solid gray; border-collapse: collapse">
                                            <thead>
                                            <tr>
                                                <td>№ Заказа</td>
                                                <td>Контрагент</td>
                                                <td>Адрес доставки</td>
                                                <td>Дата отгрузки</td>
                                                <td>Вес кг, объём плт</td>
                                                <td>Категория продукции</td>
                                                <td>Условия</td>
                                                <td>Ответственный</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                {% for order in route.getOrders %}
                                                    <tr>
                                                        <td>{{ order.getCode }}</td>
                                                        <td>{{ order.getConsignee }}</td>
                                                        <td>{{ order.getUnloadAddress }}</td>
                                                        <td>{{ order.getDate|date('d.m.Y H:i') }}</td>
                                                        <td>{{ order.getWeight }} ({{  order.getCountNum }})</td>
                                                        <td></td>
                                                        <td>{{ order.getLoadSpecialConditions }}</td>
                                                        <td>{{ order.getManager }}</td>
                                                    </tr>
                                                {% endfor %}
                                                <tr>
                                                    <td>тс-00081587</td>
                                                    <td>Тандер АО</td>
                                                    <td>РЦ Орел,Орловская обл., Орловский район, д. Хардиково, ул.Совхозная, 10 А, РФ, 302507,</td>
                                                    <td>28.11.16 11:00</td>
                                                    <td>7000 (14)</td>
                                                    <td>масло</td>
                                                    <td></td>
                                                    <td>Верещак Виктор, тел. 8 (629) 531-10-66</td>
                                                </tr>
                                                <tr>
                                                    <td>тс-00081587</td>
                                                    <td>Южная сырная лавка</td>
                                                    <td>344065, Ростовская обл, Ростов-на-Дону г, Орская ул, дом № 31Д</td>
                                                    <td>30.11.16</td>
                                                    <td>2300 (6)</td>
                                                    <td>майонез</td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Количество точек выгрузки:<span> 3</span></div>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Общий вес брутто:<span> 17300</span></div>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Количество паллет:<span> 32</span></div>
                                    </div>
                                    <div style="float:right"><a class="btn btn-default" href="{{ url("auction") }}">Вернуться к списку</a></div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}