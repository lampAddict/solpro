{% extends 'base.html.twig' %}

{% block topMenuSearch %}
    {{ include('search/search.html.twig', { 'searchCaption': 'Поиск по рейсам..' }) }}
{% endblock %}

{% block body %}
    <div id="routesPageContainer">
        <div id="routesFilter">
            <div class="half">
                <div><a id="filter">Показать фильтры</a></div>
                <div id="filterBlock" class="half dnone">
                    <table cellpadding="0" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Статус рейса</th>
                            <th>Направление</th>
                            <th>Дата подачи</th>
                            <th>Водитель с машиной</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="routeFilterStatus">
                                    <select id="routeFilterStatus">
                                        <option selected="selected">&mdash;</option>
                                        <option>Подтвержден</option>
                                        <option>Отгружен</option>
                                    </select>
                                </td>
                                <td class="routeFilterDirection">
                                    <div>
                                        <span>Откуда</span>
                                        <select id="routeFilterDirFrom">
                                            <option selected="selected">&mdash;</option>
                                            <option>Саратов</option>
                                            <option>Аткарск</option>
                                        </select>
                                    </div>
                                    <div>
                                        <span>Куда</span>
                                        <select id="routeFilterDirTo">
                                            <option selected="selected">&mdash;</option>
                                            <option>Казань</option>
                                            <option>Тула</option>
                                        </select>
                                    </div>
                                </td>
                                <td class="routeFilterGetInTime">
                                    <div>
                                        <span>С</span>
                                        <input type="datetime-local" id="routeFilterTimeFrom">
                                    </div>
                                    <div>
                                        <span>По</span>
                                        <input type="datetime-local" id="routeFilterTimeTo">
                                    </div>
                                </td>
                                <td class="routeFilterDriver">
                                    <div>
                                        <span>Назначен</span>
                                        <input type="checkbox" id="routeFilterDriverSet">
                                    </div>
                                    <div>
                                        <span>Неназначен</span>
                                        <input type="checkbox" id="routeFilterDriverNotSet">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="routesTable">
            <table cellpadding="0" cellspacing="0">
                <thead>
                <tr>
                    <th>Статус рейса</th>
                    <th>№ Рейса</th>
                    <th>Направление</th>
                    <th>Подача</th>
                    <th>Вид ТС</th>
                    <th>Вес, кг (Объем, плт)</th>
                    <th>Ставка</th>
                    <th>Водитель</th>
                    <th>Марка, гос. номер ТС</th>
                </tr>
                </thead>
                <tbody>
                    {% for route in routes %}
                        <tr>
                            <td class="routeStatus">{{ route.getStatus }}</td>
                            <td align="center"><a class="showLotRouteInfo">{{ route.getCode }}</a></td>
                            <td class="routeDirection">{{ route.getRegionFrom }} &xrarr;<br />{{ route.getRegionTo }}</td>
                            <td class="routeGetInTime">{{ route.getLoadDate|date('d.m.Y H:i') }}</td>
                            <td class="routeVehicleType">{{ route.getVehicleType }}<br />{{ route.getVehiclePayload }}</td>
                            <td align="right">{{ route.getCargoWeight }} ({{ route.getCargoCount }})</td>
                            <td align="right">{{ route.getLotId.getPrice }}</td>
                            <td class="routeAssignedDriver" align="center">{% if route.getVehicleDriver is not null %}{{ route.getVehicleDriver.getFio }}{% endif %}</td>
                            <td class="routeAttachedVehicle" align="right">{% if route.getVehicleDriver is not null and route.getVehicleDriver.getTransportId is not null %}{{ route.getVehicleDriver.getTransportId.getName }} {{ route.getVehicleDriver.getTransportId.getRegNum }}{% endif %}</td>
                        </tr>
                        <tr class="zeroHeight">
                            <td colspan="9" class="hiddenRow">
                                <div class="dnone lotInfoWindow">
                                    <div class="routeNumber">
                                        Рейс №: <span id="routeNumber">{{ route.getCode }}</span>
                                    </div>
                                    <div class="routeStatus">
                                        Статус: <span id="routeStatus">{{ route.getStatus }}</span>
                                    </div>
                                    <div class="routeInfoTable">
                                        <table cellspacing="0" cellpadding="0">
                                            <tbody>
                                            <tr>
                                                <td>Дата загрузки:</td><td>{{ route.getLoadDate|date('d.m.Y H:i') }}</td>
                                            </tr>
                                            <tr>
                                                <td>Пункт отгрузки:</td><td>{{ route.getRegionFrom }}</td>
                                            </tr>
                                            <tr>
                                                <td>Регион доставки:</td><td>{{ route.getRegionTo }}</td>
                                            </tr>
                                            <tr>
                                                <td>Вид ТС:</td><td>{{ route.getVehiclePayload }} {{ route.getVehicleType }}</td>
                                            </tr>
                                            <tr>
                                                <td>Тариф:</td><td>{{ route.getLotId.getPrice }} &#8381;</td>
                                            </tr>
                                            <tr>
                                                <td>Комментарий:</td><td>{{ route.getComment }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div data-routeId="{{ route.getId }}" class="routeAssignDriver">
                                        <div class="routeDriverHeader">Водитель:</div>
                                        {% if route.getVehicleDriver|length > 0 %}
                                            <div class="routeDriverName">{{ route.getVehicleDriver.getFio }}</div>
                                            <div class="routeDriverPassportData">{{ route.getVehicleDriver.getPassport }}</div>
                                            <div class="routeDriverVehicle">{{ route.getVehicleDriver.getTransportId.getName }} {{ route.getVehicleDriver.getTransportId.getRegNum }} {% if route.getVehicleDriver.getTransportId.getTrailerRegNum|length > 0 %}п/п: {{ route.getVehicleDriver.getTransportId.getTrailerRegNum }}{% endif %}</div>
                                        {% endif %}
                                        <div id="routeAssignDriver" class="btn btn-default">Назначить водителя</div>
                                        {% if route.getVehicleDriver is not null %}
                                            <div id="routeDeleteDriver" class="btn btn-danger">Удалить водителя из рейса</div>
                                        {% endif %}
                                    </div>

                                    <div class="routeInfo">
                                        <span>Информация по заказам:</span>
                                        <table id="routeOrdersTable" cellpadding="0" cellspacing="0" style="border:1px solid gray; border-collapse: collapse">
                                            <thead>
                                            <tr>
                                                <td>№ Заказа</td>
                                                <td>Контрагент</td>
                                                <td>Адрес доставки</td>
                                                <td>Дата отгрузки</td>
                                                <td>Вес кг, объём плт</td>
                                                <td>Категория продукции</td>
                                                <td>Спец. условия погрузки</td>
                                                <td>Спец. условия выгрузки</td>
                                                <td>Ответственный</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                {% for order in route.getOrders %}
                                                    <tr>
                                                        <td>{{ order.getCode }}</td>
                                                        <td>{{ order.getConsignee }}</td>
                                                        <td>{{ order.getUnloadAddress }}</td>
                                                        <td>{{ order.getDate|date('d.m.Y H:i') }}</td>
                                                        <td>{{ order.getWeight }} ({{  order.getCountNum }})</td>
                                                        <td></td>
                                                        <td>{{ order.getLoadSpecialConditions }}</td>
                                                        <td>{{ order.getUnloadSpecialConditions }}</td>
                                                        <td>{{ order.getManager }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Количество точек выгрузки:<span> {{ route.getOrders|length }}</span></div>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Общий вес брутто:<span> {{ route.getCargoWeight }} кг</span></div>
                                        <div style="font-weight:bold; float: left; margin-right: 10px; margin-top: 10px">Количество паллет:<span> {{ route.getCargoCount }}</span></div>
                                    </div>
                                    <div style="float:right; padding-bottom: 10px;"><a class="btn btn-default btnCloseRouteInfo">Вернуться к списку</a></div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div id="routeAddDriverWindow">
        <div class="routeAddDriverSelect">
            <select id="routeAddDriverSelect">
                <option selected="selected">Выберите водителя</option>
                {% for driver in drivers %}
                    <option value="{{ driver.getId }}" data-vehicle="{% if driver.getTransportId is not null %}{{ driver.getTransportId.getName }} {{ driver.getTransportId.getRegNum }}{% endif %}">{{ driver.getFio }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="routeAddVehicleSelect">
            <div class="attachedVehicle">Прикрепленная к водителю машина:<br /><strong class="driversVehicle"></strong></div>
            <div style="margin:5px 0">Если у водителя нет прикрепленной машины или он поедет на другой, то</div>
            <select id="routeAddVehicleSelect">
                <option selected="selected">Выберите машину</option>
                {% for vehicle in vehicles %}
                    <option value="{{ vehicle.getId }}">{{ vehicle.getName }} {{ vehicle.getRegNum }}</option>
                {% endfor %}
            </select>
        </div>
        <input class="btn btn-success" type="button" value="Сохранить" />
        <a class="btn btn-default" style="float:right" href="{{ path('routes') }}">Отменить</a>
    </div>
{% endblock %}